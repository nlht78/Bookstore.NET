@{
    ViewBag.Title = "Quên Mật Khẩu";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Quên Mật Khẩu - Website Bán Sách</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center">Quên Mật Khẩu</h2>
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
        }

        @using (Html.BeginForm("QuenMatKhau", "KhachHang", FormMethod.Post))
        {
            <div class="form-group">
                <label>Email</label>
                @Html.TextBox("email", "", new { @class = "form-control", placeholder = "Nhập email của bạn" })
            </div>
            <button type="submit" class="btn btn-primary btn-block">Gửi OTP</button>
        }
    </div>
</body>
</html>
