@model IEnumerable<Websitebansach.Models.DonHang>

@{
    ViewBag.Title = "Lịch sử đơn hàng";
    Layout = "~/Views/Layout/NguoidungLayout2.cshtml";
}
<style>
    /* Tiêu đề chính */
    h1 {
        font-size: 24px;
        font-weight: bold;
        text-align: center;
        margin-bottom: 20px;
        color: #333;
    }

    /* Đoạn thông báo khi không có đơn hàng */
    p {
        text-align: center;
        font-size: 18px;
        color: #888;
        margin-top: 20px;
    }

    /* Bảng hiển thị đơn hàng */
    .table {
        width: 100%;
        border-collapse: collapse;
        margin: 20px auto;
        background-color: #f9f9f9;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
        overflow: hidden;
    }

        .table thead {
            background-color: #007bff;
            color: white;
            text-align: left;
        }

        .table th, .table td {
            padding: 12px 15px;
            border: 1px solid #ddd;
            text-align: center;
        }

        .table tbody tr:hover {
            background-color: #f1f1f1;
        }

    /* Các trạng thái giao hàng và thanh toán */
    span {
        font-weight: bold;
    }

        span[style="color: red;"] {
            color: red !important;
        }

    /* Icon "Xem chi tiết" */
    a[title="Xem chi tiết"] i {
        color: #007bff;
        font-size: 18px;
        transition: color 0.2s ease-in-out;
    }

    a[title="Xem chi tiết"]:hover i {
        color: #0056b3;
    }

    /* Nút hủy đơn hàng */
    button.btn-danger {
        background-color: #dc3545;
        border: none;
        color: white;
        font-size: 14px;
        padding: 8px 12px;
        border-radius: 5px;
        cursor: pointer;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        transition: background-color 0.3s ease-in-out;
    }

        button.btn-danger i {
            margin-right: 5px;
        }

        button.btn-danger:hover {
            background-color: #c82333;
        }

    /* Icon không thể hủy */
    span[title="Không thể hủy (Đã giao)"] i {
        font-size: 18px;
        color: grey;
        opacity: 0.7;
    }
</style>
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<h1>Lịch sử đơn hàng</h1>

@if (!Model.Any())
{
    <p>Bạn chưa có đơn hàng nào.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Mã đơn hàng</th>
                <th>Ngày đặt</th>
                <th>Ngày giao</th>
                <th>Tình trạng giao hàng</th>
                <th>Phương thức thanh toán</th>
                <th>Xem chi tiết</th>
                <th>Hủy đơn hàng</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.MaDonHang</td>
                    <td>@item.NgayDat</td>
                    <td>
                        @if (item.NgayGiao != null)
                        {
                            <span>@item.NgayGiao</span>
                        }
                        else
                        {
                            <span style="color: red;">Chưa giao</span>
                        }
                    </td>
                    <td>
                        @if (item.TinhTrangGiaoHang == 1)
                        {
                            <span>Đã giao</span>
                        }
                        else
                        {
                            <span style="color: red;">Chưa giao</span>
                        }
                    </td>
                    <td>
                        @if (item.DaThanhToan == 1)
                        {
                            <span>Thanh toán online</span>
                        }
                        else
                        {
                            <span>Thanh toán khi nhận hàng</span>
                        }
                    </td>
                    <td>
                        <a href="@Url.Action("ChiTietLichSuDonHang", "KhachHang", new { maDonHang = item.MaDonHang })" title="Xem chi tiết">
                            <i class="fa fa-eye"></i>
                        </a>
                    </td>
                    <td>
                        @if (item.TinhTrangGiaoHang != 1)
                        {
                            using (Html.BeginForm("HuyDonHang", "KhachHang", FormMethod.Post))
                            {
                                <input type="hidden" name="maDonHang" value="@item.MaDonHang" />
                                <button type="submit" class="btn btn-danger" onclick="return confirm('Bạn có chắc chắn muốn hủy đơn hàng này không?')" title="Hủy đơn hàng">
                                    <i class="fa fa-trash"></i> <!-- Icon thùng rác -->
                                </button>
                            }
                        }
                        else
                        {
                            <span title="Không thể hủy (Đã giao)">
                                <i class="fa fa-ban" style="color: grey;"></i>
                            </span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}